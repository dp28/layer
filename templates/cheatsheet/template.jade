html
  head
    style.
      body {
        background: black;
        color: white;
        opacity: 0.5;
      }

      h1 {
        text-align: center;
      }

      table {
        text-align: left;
        margin: auto;
      }

      th {
        padding-right: 20px;
      }

      .name {
        color: red;
        font-weight: bold;
      }
  body
    h1 #{title}

    table
      thead
        tr
          th Command
          th Description

      tbody
        each command in commands
          tr
            td.name #{command.name}
            td.description #{command.description}
